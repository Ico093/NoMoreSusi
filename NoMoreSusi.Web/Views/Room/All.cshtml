@model System.Collections.Generic.List<NoMoreSusi.Web.ViewModels.Rooms.RoomViewModel>

@{
	ViewBag.Title = "All Rooms";
}

<h2>@ViewBag.Title</h2>

@{
	var roomsRows = Model.Count / 3;

	if (Model.Count % 3 == 0)
	{
		roomsRows += 1;
	}

}

@for (int i = 0; i < roomsRows; i++)
{
	<div class="row">
		@for (int j = 0; j < 3; j++)
		{
			if (3 * i + j == Model.Count)
			{
				break;
			}

			<div class="col-sm-4">
				<div class="row">
					<span>Facultity: @Model[3 * i + j].Facultity</span>
					<span>Room: @Model[3 * i + j].Number</span>
					<span>People count: @Model[3 * i + j].PeopleCount</span>
					@Html.ActionLink("Edit", "Edit", "Room", new { id = Model[3 * i + j].Id }, new { @class = "btn btn-primary" })
				</div>
			</div>
		}
	</div>
}
