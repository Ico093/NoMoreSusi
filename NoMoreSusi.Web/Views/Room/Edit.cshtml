@model NoMoreSusi.Web.ViewModels.Rooms.EditRoomViewModel

@{
	ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>

<div class="row">
	@using (Html.BeginForm("Edit", "Room", FormMethod.Post, new { @class = "form-horizontal" }))
	{
		@Html.AntiForgeryToken()
		@Html.HiddenFor(m => m.Id)

		<fieldset>
			<div class="row form-group">
				<div class="col-md-6">
					@Html.LabelFor(m => m.Number)
					@Html.EditorFor(m => m.Number, new { htmlAttributes = new { @class="form-control"}})
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-6">
					@Html.LabelFor(m => m.Facultity)
					<select class="form-control" name="Facultity">
						@foreach (var facultity in Model.Facultities)
						{
							if (facultity == Model.Facultity)
							{
								<option value="@facultity" selected="selected">@facultity.ToString()</option>

							}
							else
							{
								<option value="@facultity">@facultity.ToString()</option>
							}
						}
					</select>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-6">
					@Html.LabelFor(m => m.PeopleCount)
					@Html.EditorFor(m => m.PeopleCount, new { htmlAttributes = new { @class="form-control"}})
				</div>
			</div>
		</fieldset>

		@Html.SubmitButton("Submit", new { @class = "btn btn-primary" })
	}
</div>