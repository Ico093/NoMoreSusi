@model NoMoreSusi.Web.ViewModels.Students.EditStudentViewModel

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Student", FormMethod.Post))
{
    <div>
        @Html.DisplayNameFor(s => s.UserName)
        @Html.EditorFor(s => s.UserName)
    </div>

    <div>
        @Html.DisplayNameFor(s => s.Name)
        @Html.EditorFor(s => s.Name)
    </div>

    <div>
        @Html.DisplayNameFor(s => s.Email)
        @Html.EditorFor(s => s.Email)
    </div>

    <div>
        @Html.DisplayNameFor(s => s.Password)
        @Html.PasswordFor(s => s.Password)
    </div>

    <div>
        @Html.DisplayNameFor(s => s.Course)
        @Html.DropDownListFor(s => s.Course, Model.Courses)
    </div>

    <div>
        @Html.SubmitButton("Save", new { @class = "btn btn-primary" })
    </div>
}