@model NoMoreSusi.Web.ViewModels.Teachers.EditTeacherViewModel

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Teacher", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(s => s.UserId)

    <div class="form-group">
        @Html.DisplayNameFor(s => s.Name)
        @Html.EditorFor(s => s.Name, new { htmlAttributes = new { @class="form-control"}})
    </div>

    <div>
        @Html.SubmitButton("Save", new { @class = "btn btn-primary" })
    </div>
}